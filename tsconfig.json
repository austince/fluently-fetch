{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "dom",
            "dom.iterable",
            "es2017.object"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib"
    },
    "include": [
        "src"
    ]
}
